        <ul class="navbar-right2">
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
             <div class="form-group">
              <%= f.label :email %> 
              <%= f.email_field :email, autofocus: true %>
              <%= f.label :password %>
