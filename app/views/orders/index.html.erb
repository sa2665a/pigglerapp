<div class= "index-text">
  <h1><%= @user.name %></h1>
    <div class= "col-md-4">
      <%= link_to 'Request Again', "/users/#{@user.id}/orders/new", :class =>"btn btn-success 2" %>
    </div>
    <%=link_to image_tag("/banner.png", :class =>"leaderboard"), "/users/#{@user.id}/orders/new" %>
</div>

<div>
  <h2 class="current"> Current Pigglers' Orders</h2> 

  <table class="table table-striped tabl ">
    <thead>
      <tr class="success">
        <th>Order Amount</th>
        <th>Location</th>
        <th>Extra </th>
       </tr>
    </thead>

     <tbody>
      <% @orders.each  do |order| %>
      <tr data-link="<%="/users/#{@user.id}/orders/#{order.id}"%>">
  				<td><%= order.amount %> </td>
  				<td><%= order.source %> </td>
  				<td><%= link_to 'More Info', "/users/#{@user.id}/orders/#{order.id}" %></td>	
      </tr>
      <% end %>	 
    </tbody>
  </table>
</div>